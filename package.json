{
  "name": "stm-server",
  "version": "0.1.0",
  "description": "",
  "main": "dist",
  "scripts": {
    "dev": "nodemon -w src --exec \"babel-node src --presets es2015,stage-0\"",
    "build": "babel src -s -D -d dist --presets es2015,stage-0",
    "start": "node dist",
    "prestart": "npm run -s build",
    "lint": "eslint ./src",
    "test": "./node_modules/.bin/mocha --require babel-register --recursive ./src/**/*.spec.js"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1,
      "semi": [
        2,
        "never"
      ],
      "quotes": [
        2,
        "single",
        {
          "allowTemplateLiterals": true
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/st-thomas-more/stm-server#readme"
  },
  "dependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "body-parser": "^1.13.3",
    "compression": "^1.5.2",
    "cors": "^2.7.1",
    "dotenv": "^2.0.0",
    "express": "^4.13.3",
    "mysql": "^2.12.0",
    "resource-router-middleware": "^0.5.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.1.1",
    "fast-csv": "^2.3.0",
    "mocha": "^3.1.2",
    "nodemon": "^1.9.2"
  },
  "bugs": {
    "url": "https://github.com/st-thomas-more/stm-server/issues"
  },
  "homepage": "https://github.com/st-thomas-more/stm-server#readme"
}
